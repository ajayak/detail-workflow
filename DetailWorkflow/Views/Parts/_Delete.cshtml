@model DetailWorkflow.Models.Part

<div class="modal-header">
    <a class="close" data-dismiss="modal" aria-hidden="True">&times;</a>
    <h4 class="modal-title">Are you sure you want to delete this?</h4>
</div>

<div class="modal-body">
    <p id="MessageToClient" class="text-danger"></p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.InventoryItemCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryItemCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InventoryItemName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExtendedPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExtendedPrice, "CustomNumberFormat")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsInstalled)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsInstalled)
        </dd>

    </dl>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "partchoice", @class = "deleteform" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-footer">
        <a class="btn btn-default" data-dismiss="modal">Cancel</a>
        <input class="btn btn-primary" type="submit" value="Yes" />
    </div>
}

